<%= render 'shared/navbar' %>
<div class="border">
  <div class="edit-pic-container">
    <div class="welcome-pic">
      <h3 class="welcome-profile neg-mt-20 text-center">change your profile picture</h3>
      <%= simple_form_for(@user, as: :user, url: update_prof_pic_path) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs-profpic">
          <p>current profile picture</p>
          <% if current_user.prof_pic.present? %>
          <img src="<%=@user.pic_url%>" class="prof-pic mb-40">
            <%# <%= cl_image_tag(@user.prof_pic.key, crop: :fill, class: "prof-pic mb-40") %>
            <%# <%= image_tag(@user.prof_pic, class: "prof-pic mb-40") unless @user.prof_pic.nil? %>
          <% else %>
            <img src="https://snacky-assets.s3.eu-west-2.amazonaws.com/haribo-prof.jpeg", class="prof-pic mb-40">
          <% end %>

          <%= f.input :image, as: :file,
                          label: false,
                          label_html: { class: 'login-text ' },
                          input_html: { class: '' },
                          id: "file-upload-button",
                          style:"font-size: 18px;" %>
        </div>
      <div class="flex-center">
        <%= f.button :submit, "update", class: "update-btn mt-60" %>
      </div>
    <% end %>
    </div>

    <div class="back">
      <%= link_to :back, class:"back-btn" do %>
      <i class="fa-solid fa-hand-point-left back-hand"></i>
      <% end %>
    </div>
  </div>
</div>
