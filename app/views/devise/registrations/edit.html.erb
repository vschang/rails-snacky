<%= render 'shared/navbar' %>
<div class="border">
  <div class="edit-container">
    <h2 class="welcome-profile make-post center">edit your profile</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :username,
                    label: "change your username",
                    input_html: { autocomplete: "change your username", class: 'login-input-edit' },
                    label_html: { class: 'label-text' } %>
        <%= f.input :password,
                    label: "change your password",
                    required: false,
                    input_html: { autocomplete: "new-password", class: 'login-input-edit' },
                    label_html: { class: 'label-text' } %>
        <%= f.input :password_confirmation,
                    label: "new password confirmation",
                    required: false,
                    input_html: { autocomplete: "new-password" , class: 'login-input-edit' },
                    label_html: { class: 'label-text' } %>
        <%= f.input :current_password,
                    label: false,
                    hint: "your current password is needed to confirm any changes", hint_html: {class:"hint"},
                    required: true,
                    input_html: { autocomplete: "current-password" , class: 'login-input-edit password-input' },
                    label_html: { class: 'label-text' } %>

      </div>

      <div class="flex-center">
        <%= f.button :submit, "update", class: "update-btn " %>
      </div>
    <% end %>

    <div class="delete-back-2">
      <%= link_to :back, class:"back-btn" do %>
        <i class="fa-solid fa-hand-point-left back-hand"></i>
      <% end %>
      <%= button_to "delete my account", registration_path(resource_name), form: { data: { turbo_confirm: "⛔️ Are you sure you want to delete your account? You will NOT be able to undo this action ⛔️" } }, method: :delete, class: "delete font-12" %>
      <%# <%= button_to "delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "delete font-16" %>
    </div>
  </div>
</div>
